{
  "name": "theme-globaltech/core-features",
  "version": "2.0.0",
  "description": "Core features plugin for Theme Globaltech - Hexagonal Architecture",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Willian Sant'Anna",
      "homepage": "https://github.com/wssantanna"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "ThemeCore\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ThemeCore\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "analyse": "phpstan analyse src --level=8",
    "cs:check": "phpcs --standard=PSR12 src/",
    "cs:fix": "phpcbf --standard=PSR12 src/"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
